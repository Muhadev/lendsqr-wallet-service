# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1
API_BASE_URL=https://your-domain.com

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_NAME=lendsqr_wallet
DB_TEST_NAME=lendsqr_wallet_test

# Database Pool Configuration (Optional)
DB_POOL_MIN=1
DB_POOL_MAX=5
DB_ACQUIRE_TIMEOUT=30000
DB_CREATE_TIMEOUT=30000
DB_DESTROY_TIMEOUT=5000
DB_IDLE_TIMEOUT=10000
DB_REAP_INTERVAL=1000
DB_CREATE_RETRY_INTERVAL=100

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=24h

# Adjutor API Configuration
ADJUTOR_API_URL=https://adjutor.lendsqr.com/v2
ADJUTOR_API_KEY=your_adjutor_api_key_here
ADJUTOR_API_TIMEOUT=10000
KARMA_ENDPOINT=/verification/karma
KARMA_MAX_CONCURRENT_REQUESTS=3
ALLOW_REGISTRATION_ON_KARMA_FAILURE=false

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_REQUESTS=5
TRANSACTION_RATE_LIMIT_WINDOW_MS=60000
TRANSACTION_RATE_LIMIT_MAX_REQUESTS=10
USER_TRANSACTION_RATE_LIMIT_WINDOW_MS=60000
USER_TRANSACTION_RATE_LIMIT_MAX_REQUESTS=5

# Transaction Limits
MIN_FUNDING_AMOUNT=100
MAX_FUNDING_AMOUNT=1000000
MIN_TRANSFER_AMOUNT=10
MAX_TRANSFER_AMOUNT=500000
MIN_WITHDRAWAL_AMOUNT=100
MAX_WITHDRAWAL_AMOUNT=200000

# Security Configuration
BCRYPT_SALT_ROUNDS=12
HSTS_MAX_AGE=31536000
BODY_LIMIT=10mb

# Transaction Configuration
TRANSACTION_REF_PREFIX=TXN
TRANSACTION_REF_MAX_ATTEMPTS=20
ACCOUNT_NUMBER_MAX_ATTEMPTS=10

BCRYPT_SALT_ROUNDS=12
CURRENCY=NGN
TRANSACTION_REF_PREFIX=TXN

# Shutdown Configuration
SHUTDOWN_TIMEOUT=10000

# CORS Configuration (comma-separated URLs for production)
CLIENT_URL=https://your-frontend-domain.com,https://another-domain.com

# Logging Configuration
LOG_LEVEL=info